@model TestMovieSite.Views.ViewModels.MoviePageViewModel
@addTagHelper *, TestMovieSite
@{
    ViewData["Title"] = "Home Page";
}

<partial name="_MessagePanel" model="Model" />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        @{
            var movie = Model.Movies.FirstOrDefault();
        }
        <th>
            @Html.DisplayNameFor(model => movie.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => movie.Director)
        </th>
        <th>
            @Html.DisplayNameFor(model => movie.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => movie.DownloaderName)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Movies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DownloaderName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
<page-link page-model="@Model" page-action="Index"></page-link>